<header class="sticky row">
        <a href="index.html"><img class="logo-nav" src="images/punctilio-white.png" alt="punctilio logo"></a>
        <!-- <a href="testimonials.html"><button>Testimonials</button></a> -->
        <a href="accreditation.html"><button>Accreditations</button></a>
        <ul>
            <li>Essex based.</li>
            <li>Tel No: 07507 359510</li>
        </ul>
        <ul>
            <li>Email: info@Punctilio.co.uk</li>
            <li>www.Punctilio.co.uk.</li>
        </ul>
</header>

<div class="container">
    <div class="row cols-sm-12 cols-md-10">
        <div class="col-md-offset-1">
            <br />
            {% block large_logo %}
            {% endblock large_logo %}
            <h1><small>Get it right, first time and every time.</small></h1>
            <hr>
            {% block contents %}
            {% endblock contents %}
        </div>
    </div>
</div>

<footer>
    <div class="col-sm col-md-8 col-md-offset-1">
        <div id="footer-container">
            <ul>
                <li>Essex based.</li>
                <li>Tel No: 07507 359510</li>
                <li>Email: info@Punctilio.co.uk</li>
                <li>www.Punctilio.co.uk.</li>
            </ul>
            <img id="sfep-logo-normal" src="images/sfep-entry-normal.png" />
            <div>
                Web development by <a href="https://allanderek.github.io/">Allan Clark</a>
            </div>
        </div>
    </div>
</footer>

{% block page_scripts %}
{% endblock page_scripts %}

