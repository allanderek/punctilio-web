    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <title>Punctilio - {% block title %}{% endblock %}</title>

    <style>
        body{
            background-image: linear-gradient(#ddadad, #820303);
        }

        header {
            height: 60px;
        }

        .logo-nav{
            max-height: 50px;
            width: auto;
        }

        .logo-title{
            max-height: 100pt;
            width: auto;
            display: block;
            margin: auto;
        }

        h1{
            font-size: 48pt;
            font-weight: bold;
            /* text-shadow:
               -1px -1px 0 #820303,
                1px -1px 0 #820303,
               -1px 1px 0 #820303,
                1px 1px 0 #820303; */
        }

        h1 small{
            font-size: 28pt;
        }

        #demonstration{
            display: flex;
            flex-direction: row;
            align-items: stretch;
        }

        .secondary{
            padding: 0;
        }

        #request-with-sfep-logo{
            display: flex;
            flex-direction: row;
        }

        #sfep-logo-normal{
            background-color: #000000;
        }

        #footer-container{
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: flex-end;
        }

    </style>

    {% block page_css %}
    {% endblock page_css %}
</head>

<body>

